# Hibernate properties

hibernate.connection.factory="org.apache.tomcat.dbcp.dbcp.BasicDataSourceFactory"
hibernate.connection.driverClassName="oracle.jdbc.driver.OracleDriver"
hibernate.connection.url="jdbc:oracle:thin:@hostname:port:database"
hibernate.connection.username="xxxx"
hibernate.connection.password="xxxx"

hibernate.dialect=org.hibernate.dialect.Oracle10gDialect
hibernate.hbm2ddl.auto=true
hibernate.connection.autocommit=false
hibernate.jdbc.batch_size=50
hibernate.show_sql=false
hibernate.connection.pool_size=1

hibernate.jdbc.use_scrollable_resultset=true
hibernate.jdbc.wrap_result_sets = true